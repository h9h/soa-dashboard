{
  "name": "soa-dashboard",
  "version": "1.0.0",
  "license": "MIT",
  "bin": "backend-auth/server.js",
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "activedirectory2": "^1.2.7",
    "axios": "^0.19.0",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "koa-send": "^5.0.0",
    "ldapjs": "^1.0.2",
    "moment": "^2.24.0",
    "ramda": "^0.26.1"
  },
  "scripts": {
    "ncc:server:auth": "ncc run backend-auth/server.js",
    "ncc:server:file": "ncc run backend-jobs/server",
    "start:auth": "node backend-auth/server.js",
    "start:file": "node backend-jobs/server.js",
    "start:frontend": "cd frontend && yarn start",
    "start": "npm-run-all --parallel start:frontend start:auth ncc:server:file --print-label",
    "build": "cd frontend && yarn build",
    "ncc:build": "ncc build backend-auth/server.js -o dist/auth && ncc build backend-jobs/server.js -o dist/jobs",
    "prepkg:server:dashboard": "yarn build",
    "pkg:server:dashboard": "pkg . --target node10-win-x64 --output esb-dashboard.exe --debug > output-dashboard-win-pkg.log",
    "pkg:server:file": "pkg ./backend-jobs/server.js --target node10-win-x64 --output esb-jobs.exe --debug > output-jobs-windows-pkg.log",
    "pkg:all": "yarn pkg:server:dashboard && yarn pkg:server:file",
    "copy:auth": "copy /y .\\dist\\auth\\index.js .\\frontend\\build\\auth.js",
    "build:all": "yarn pkg:all && yarn ncc:build && yarn copy:auth",
    "release-it": "cd frontend && yarn release-it && git push --follow-tags"
  },
  "devDependencies": {
    "@zeit/ncc": "^0.20.2",
    "npm-run-all": "^4.1.5",
    "pkg": "^4.4.0",
    "react-scripts": "^3.0.1"
  },
  "pkg": {
    "assets": [
      "frontend/build/**/*"
    ]
  }
}
